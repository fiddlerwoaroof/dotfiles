    (ql:quickload :cffi)
    (ql:quickload :cffi-toolchain)
    nil)

#.(progn
    (push (merge-pathnames ".nix-profile/lib/"
                           (user-homedir-pathname))
          cffi:*foreign-library-directories*)
    nil)

#.(progn (require :sb-aclrepl)
         (when (and (interactive-stream-p *terminal-io*)
