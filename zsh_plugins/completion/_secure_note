#compdef secure_note

_secure_note() {
  local curcontext="$curcontext" state line
  typeset -A opt_args

  _arguments \
    '1: :->mode' \
    '2: :->file'

  case $state in
    mode)
      _arguments '1:Mode:(-h -n -r -l)'
      ;;
    file)
      case $words[2] in
        '-r')
          pushd $HOME/Dropbox/secure_notes > /dev/null
          compadd "$@" *
          popd > /dev/null
          ;;
      esac

      ;;
  esac
}
